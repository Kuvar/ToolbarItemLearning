<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NavigationPageLearning"
             x:Class="NavigationPageLearning.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Icon="save_24dp.png" Priority="1" Clicked="Save_Clicked" CommandParameter="1" />
        <ToolbarItem Order="Primary" Icon="edit_24dp.png" Priority="0"/>

        <ToolbarItem Text="Help" Priority="0" Order="Secondary"/>
        <ToolbarItem Text="About" Priority="2" Order="Secondary"/>
        <ToolbarItem Text="License" Priority="1" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Padding="0,0,0,40" >
            <Label Text="Welcome to Main Page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Submit Main" x:Name="btnMainPage" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
